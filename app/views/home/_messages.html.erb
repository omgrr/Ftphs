<div class="messages col-md-4">
  <div class="message-pane">
    <% Message.all.order(created_at: :desc).each do |m| %>
      <div class="alert alert-info">
        <p>
        <strong><%= m.username%></strong> <small><%= m.created_at %></small> </br>
          <%=m.body%>
        </p>
      </div>
    <% end %>
  </div>

  <div class="col-md-12" style="padding-top:10px;">
    <%= form_tag(messages_path, id: "message_form") do %>
      <div class="row">
        <%= text_area_tag(:message, "", id: "message", size:"40x5") %>
      </div>
      <div class="row">
        <%= submit_tag("Submit", class:"btn btn-primary btn-block") %>
      </div>
    <% end %>
  </div>
</div>
